                                             <port>8081</port>
                                             <port>1099</port>
                                             <port>44444</port>
                                             <port>5000</port>
                                             <port>9090</port>
                                             <port>5005</port>
                                         </ports>
                                         <format>Docker</format>
                                         <volumes>
                                             <volume>/edemokracia-application/deploy</volume>
                                             <volume>/edemokracia-application/data</volume>
                                         </volumes>
                                     </container>
                                     <outputPaths>
                                         <tar>${basedir}/target/${project.parent.artifactId}-${project.version}_docker_image_amd64.tar</tar>
