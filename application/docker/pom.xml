                                             <path>${project.basedir}/target/assembly</path>
                                         </paths>
                                         <permissions>
                                             <permission>
                                                 <file>/edemokracia-application/bin/karaf</file>
                                                 <mode>755</mode> <!-- Read/write/execute for owner, read/execute for group/other -->
                                             </permission>
                                             <permission>
                                                 <file>/edemokracia-application/bin/setenv</file>
